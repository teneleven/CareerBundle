{% macro list(jobs) %}

	{% if jobs|length > 0 %}

		<table class="table table-hover">
	    <thead>
	      <tr>
	      		<th>Published</th>
	          <th>Replies</th>
	          <th>Title</th>
	          <th>Slug</th>
	          <th>Location</th>
	          
	          <th>Updated At</th>
	          <th>Created At</th>
	          <th></th>
	      </tr>
	    </thead>
	    <tbody>
	      {% for job in jobs %}
	        <tr>
	        	<td>{% if job.isPublished %}<span class="glyphicon glyphicon-ok"></span>{% endif %}</td>
	      	  <td>{{ job.replies|length }}</td>
	          <td><a href="{{ path('teneleven_career_backend_job_show', { 'id': job.id }) }}">{{ job.title }}</a></td>
	          <td>{{ job.slug }}</td>
	          <td>{{ job.location }}</td>
	          
	          <td>{% if job.createdAt %}{{ job.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
	          <td>{% if job.updatedAt %}{{ job.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
	          <td>
	            <div class="pull-right">
	                <a class="btn btn-info" href="{{ path('teneleven_career_backend_job_show', { 'id': job.id }) }}">show</a>
	                <a class="btn btn-primary" href="{{ path('teneleven_career_backend_job_edit', { 'id': job.id }) }}">edit</a>
	            </div>
	          </td>
	        </tr>
	      {% endfor %}
	    </tbody>
		</table>

	{% else %}
		
		<div class="alert alert-info">
		    <h4 class="alert-heading">Information</h4>
		    No Jobs to show
		</div>

	{% endif %}

{% endmacro %}

