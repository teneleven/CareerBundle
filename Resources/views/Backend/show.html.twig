{% extends 'TenelevenCareerBundle::admin.html.twig' %}

{% block teneleven_career_content -%}
<div class="page-header">
        <div class="actions-menu">
            <a href="{{ path('teneleven_career_backend_job') }}" class="btn btn-default">
                <i class="glyphicon glyphicon-list"></i>
                <span>Back to the list</span>
            </a>
            <a href="{{ path('teneleven_career_backend_job_edit', { 'id': entity.id }) }}" class="btn btn-primary">
                <i class="glyphicon glyphicon-pencil"></i>
                <span>Edit</span>
            </a>
        </div>
        <h1>
            <i class="glyphicon glyphicon-envelope"></i>
            Replies
        </h1>
    </div>


    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
       <!-- <tr>
                <th>Slug</th>
                <td>{{ entity.slug }}</td>
            </tr>
            <tr>
