{% extends '::base.html.twig' %}

{% block body -%}

	<h1>Careers</h1>
	<div class="row">
		<div class="col-sm-4">
		</div>
	    <div class="col-sm-8">
			<div class="careers-list">
			    {% for job in jobs %}
				    <div class="panel panel-default">
				      <div class="panel-heading">
				        <h3 class="panel-title">
				            <a href="{{ path('teneleven_sandbox_careers_show',{'slug': job.slug}) }}" class="btn">DETAILS <i class="icon icon-dottedarrow-right"></i></a>
				            {{ job.title }}
				        </h3>
				      </div>
				      <div class="panel-body">
				         <div class="row">
				                <div class="col-sm-2">Location:</div>
				                <div class="col-sm-10">{{ job.location }}</div>    
				            </div>
				            <div class="row">
				                <div class="col-sm-2">Reports To:</div>
				                <div class="col-sm-10">{{ job.reportTo }}</div>    
				            </div>
				            <div class="row">
				                <div class="col-sm-2">FLSA Status</div>
				                <div class="col-sm-10">{{ job.status }}</div>    
				            </div>
				            <div class="row">
				                <div class="col-sm-2">Summary:</div>
				                <div class="col-sm-10">{{ job.summary }}</div>    
				            </div>
				      </div>
				    </div>
			    {% endfor %}
			</div>        
	    </div>
	</div>

{% endblock %}