{% extends 'TenelevenCareerBundle::layout.html.twig' %}

{% block teneleven_career_content -%}
    <h1>Careers</h1>
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-8">
            {% block teneleven_careers_list -%}
                {% if pager.haveToPaginate()|default(false) %}
                    {{ pagerfanta(pager, 'twitter_bootstrap') }}
                {% endif %}

                {% if pager|length %}
                    <div class="careers-list">
                        {% for job in pager %}
                            {% block teneleven_careers_list_row -%}
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">
                                        <a href="{{ path('teneleven_career_frontend_show', { 'slug' : job.slug}) }}" class="btn">
                                            DETAILS <i class="icon icon-dottedarrow-right"></i>
                                        </a>
                                        {{ job.title }}
                                    </h3>
                                </div>
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-sm-2">Location:</div>
                                        <div class="col-sm-10">{{ job.location }}</div>    
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-2">Reports To:</div>
                                        <div class="col-sm-10">{{ job.reportTo }}</div>    
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-2">Status</div>
                                        <div class="col-sm-10">{{ job.status }}</div>    
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-2">Summary:</div>
                                        <div class="col-sm-10">{{ job.summary|raw }}</div>    
                                    </div>
                                </div>
                            </div>
                            {% endblock %}
                        {% endfor %}
                    </div>
                {% endif %}

                {% if pager.haveToPaginate()|default(false) %}
                    {{ pagerfanta(pager, 'twitter_bootstrap') }}
                {% endif %}
            {% endblock %}
        </div>
    </div>
{% endblock %}

