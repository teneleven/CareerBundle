<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

	<route id="teneleven_career_frontend_index" pattern="/">
	    <default key="_controller">teneleven.career.frontend.controller:indexAction</default>
	</route>

	<route id="teneleven_career_frontend_show" pattern="/{slug}">
	    <default key="_controller">teneleven.career.frontend.controller:showAction</default>
	</route>

	<route id="teneleven_career_frontend_reply" pattern="/{slug}/reply">
	    <default key="_controller">teneleven.career.frontend.controller:replyAction</default>
	    <requirement key="_method">post</requirement>
	</route>

</routes>