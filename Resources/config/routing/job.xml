<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="job" pattern="/">
        <default key="_controller">TenelevenCareerBundle:Backend\Job:index</default>
    </route>

    <route id="job_show" pattern="/{id}/show">
        <default key="_controller">TenelevenCareerBundle:Backend\Job:show</default>
    </route>

    <route id="job_new" pattern="/new">
        <default key="_controller">TenelevenCareerBundle:Backend\Job:new</default>
    </route>

    <route id="job_create" pattern="/create">
        <default key="_controller">TenelevenCareerBundle:Backend\Job:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="job_edit" pattern="/{id}/edit">
        <default key="_controller">TenelevenCareerBundle:Backend\Job:edit</default>
    </route>

    <route id="job_update" pattern="/{id}/update">
        <default key="_controller">TenelevenCareerBundle:Backend\Job:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="job_delete" pattern="/{id}/delete">
        <default key="_controller">TenelevenCareerBundle:Backend\Job:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
