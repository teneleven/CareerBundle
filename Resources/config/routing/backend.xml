<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="teneleven_career_backend_job" path="/">
        <default key="_controller">teneleven.career.backend.controller:indexAction</default>
    </route>

    <route id="teneleven_career_backend_job_show" path="/{id}/show">
        <default key="_controller">teneleven.career.backend.controller:showAction</default>
    </route>

    <route id="teneleven_career_backend_job_new" path="/new">
        <default key="_controller">teneleven.career.backend.controller:newAction</default>
    </route>

    <route id="teneleven_career_backend_job_create" path="/create">
        <default key="_controller">teneleven.career.backend.controller:createAction</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="teneleven_career_backend_job_edit" path="/{id}/edit">
        <default key="_controller">teneleven.career.backend.controller:editAction</default>
    </route>

    <route id="teneleven_career_backend_job_update" path="/{id}/update">
        <default key="_controller">teneleven.career.backend.controller:updateAction</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="teneleven_career_backend_job_delete" path="/{id}/delete">
        <default key="_controller">teneleven.career.backend.controller:deleteAction</default>
        <requirement key="_method">delete</requirement>
    </route>

    <route id="teneleven_career_backend_reply_delete" path="/reply/{id}/delete">
        <default key="_controller">teneleven.career.backend.reply.controller:deleteAction</default>
        <requirement key="_method">delete</requirement>
    </route>

</routes>
